#include <stdio.h>

int main() {
    int segundos, horas, minutos, resto;

    printf("Ingrese el tiempo en segundos: ");
    scanf("%d", &segundos);

    horas = segundos / 3600;
    resto = segundos % 3600; 
    minutos = resto / 60; 
    segundos = resto % 60; 

    printf("Tiempo convertido: %d horas, %d minutos, %d segundos\n", horas, minutos, segundos);

    return 0;
}
