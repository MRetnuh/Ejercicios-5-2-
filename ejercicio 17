#include <stdio.h>
#include <string.h>

int main(int argc, char *argv[]) {
    char genero[20];
    int edad;
    int peso;
    double fcp;
    
    puts("¿Qué sos? (hombre/mujer)");
    scanf("%s", genero);
    
    puts("¿Cuál es tu edad?");
    scanf("%d", &edad);
    
    puts("¿Cuál es tu peso?");
    scanf("%d", &peso);
    
    if (strcmp(genero, "hombre") == 0) {
        fcp = ((210 - (0.5 * edad)) - peso * 0.1 ) + 4;
        printf("Tu Frecuencia Cardíaca Máxima teórica es %.2f\n", fcp);
    } else if (strcmp(genero, "mujer") == 0) {
        fcp = (210 - (0.5 * edad)) - peso * 0.1;
        printf("Tu Frecuencia Cardíaca Máxima teórica es %.2f\n", fcp);
    } else {
        printf("Género no válido. Por favor, introduce 'hombre' o 'mujer'.\n");
    }
    
    return 0;
}
